<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.fabiannanez.salvameversion2.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comunicado"
            android:textColor="@color/Blanco"
            android:textStyle="italic"
            android:textSize="@dimen/veinte"
            android:gravity="center"
            android:id="@+id/textView" />
        <Button
            android:id="@+id/audio"
            android:layout_width="@dimen/medium"
            android:layout_height="@dimen/medium"
            android:backgroundTint="@color/Blanco"
            android:background="@drawable/ic_micro"
            android:layout_above="@+id/ayuda"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/treinta" />

     <!--   <ImageButton
            android:layout_width="@dimen/medium"
            android:id="@+id/texto"
            android:layout_height="@dimen/medium"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/Blanco"
            android:background="@drawable/ic_msm"
            />-->

        <Button
            android:id="@+id/ayuda"
            android:layout_gravity="center"
            android:layout_width="@dimen/doscincuanta"
            android:layout_height="@dimen/doscincuanta"
            android:background="@drawable/ic_salvame"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
